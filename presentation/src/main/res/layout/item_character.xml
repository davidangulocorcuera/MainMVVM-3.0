<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.plexus.marvel.usescase.characters.CharactersViewModel" />

        <variable
            name="item"
            type="com.plexus.domain.Character" />
    </data>


    <androidx.cardview.widget.CardView
        style="@style/MainCardView"
        android:onClick="@{() -> viewModel.goToCharacterDetail(item.id)}"
        android:layout_margin="@dimen/space_small4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_small4">

            <ImageView
                android:id="@+id/ivCharacter"
                android:layout_width="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTitle"
                style="@style/Title"
                android:textStyle="bold"
                android:text="@{item.name}"
                android:layout_width="0dp"
                app:layout_constraintBottom_toTopOf="@id/tvSubtitle"
                app:layout_constraintEnd_toStartOf="@id/ivArrow"
                app:layout_constraintStart_toEndOf="@id/ivCharacter"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSubtitle"
                style="@style/RegularText"
                android:layout_width="0dp"
                android:text="@{item.description}"
                android:maxLength="100"
                app:layout_constraintEnd_toStartOf="@id/ivArrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivCharacter"
                app:layout_constraintTop_toBottomOf="@id/tvTitle" />

            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right"
                app:layout_constraintEnd_toEndOf="parent"
                 />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>